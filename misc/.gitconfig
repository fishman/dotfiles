[alias]
	st = status -sb
	co = checkout
	ci = commit
[user]
	email = to.rifat@gmail.com
	name = Rifat Nabi
[core]
	excludesfile = ~/.gitexcludes
	ignorecase = false
[color]
	ui = auto
[push]
	default = simple
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
	keepBackup = false
[diff]
	tool = Kaleidoscope
[credential]
	helper = osxkeychain
